{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "/",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "types": ["node"],
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@doorward/ui/*": ["libs/ui/src/*"],
      "@doorward/common/*": ["libs/common/src/*"],
      "@doorward/backend/*": ["libs/backend/src/*"],
      "@doorward/chat/*": ["libs/chat/src/*"],
      "@doorward/whiteboard/*": ["libs/whiteboard/src/lib/*"]
    },
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "exclude": ["node_modules", "tmp", "libs/whiteboard"]
}

{
  "delimiter": ".",
  "privileges": {
    "courses": [
      {
        "name": "create",
        "description": "Can create a course"
      },
      "update",
      "delete",
      "view-all"
    ],
    "modules": ["create", "update", "delete", "read"],
    "moduleItems": ["create", "update", "delete", "read"]
  },
  "roles": {
    "SUPER_ADMINISTRATOR": {
      "privileges": ["*"],
      "exclude": []
    },
    "TEACHER": {
      "privileges": ["courses.*", "modules.*", "moduleItems.*"],
      "exclude": ["courses.view-all"]
    },
    "STUDENT": {
      "privileges": ["modules.read", "moduleItems.read"],
      "exclude": []
    }
  }
}

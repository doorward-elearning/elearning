{
  "name": "edudoor_node_backend",
  "version": "1.0.0",
  "description": "The redo of maintenance tracker api with NodeJS/Express ",
  "main": "index.ts",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build": "tsc -p .",
    "serve": "node dist/index.js",
    "start": "NODE_ENV=production yarn run build && yarn run serve",
    "start:dev": "NODE_ENV=development  DEBUG=log  nodemon --exec ts-node ./src/index.ts",
    "lint": "node_modules/.bin/eslint ./src",
    "pretest": "NODE_ENV=test yarn db:migrate",
    "test": "jest --no-cache  --detectOpenHandles --runInBand --forceExit",
    "db:seed": "node_modules/.bin/sequelize db:seed:all $* --seeders-path src/database/seeders/default",
    "db:seed:unittest": "node_modules/.bin/sequelize db:seed:all $* --seeders-path src/database/seeders/unittesting",
    "db:seed:e2e": "node_modules/.bin/sequelize db:seed:all $* --seeders-path src/database/seeders/e2e",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:rollback": "node_modules/.bin/sequelize db:migrate:undo:all",
    "db:rollmigrate": "yarn db:rollback && yarn db:migrate && yarn db:seed"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Moses Gitau",
  "license": "ISC",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "body-parser": "^1.19.0",
    "build-server": "^0.0.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "http-errors": "^1.7.2",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pg": "^7.12.1",
    "sequelize": "^5.21.1",
    "sequelize-cli": "^5.4.0",
    "ts-node": "^8.4.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.1",
    "@types/lodash": "^4.14.144",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.11.7",
    "@types/pg": "^7.11.2",
    "@types/sequelize": "^4.28.6",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/?(*.)(spec|test)js",
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/database/migrations",
      "<rootDir>/src/database/seeders",
      "<rootDir>/src/database/models/index.js",
      "<rootDir>/src/middlewares/index.js"
    ],
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts"
  }
}
